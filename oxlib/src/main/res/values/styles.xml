<resources>

    <!--自定义标题栏样式-->
    <style name="TitleDefStyle" >
        <item name="titleHeight">50dip</item>
        <item name="textSize">16</item>      <!--文字大小-->
        <item name="textColor">@android:color/white</item>     <!--文字颜色-->
        <item name="textIconSpace">5dip</item>    <!--文字和图标之间的间距-->
        <item name="leftSpace">20dip</item>    <!--标题左侧的空隙-->
        <item name="rightSpace">20dip</item>   <!--标题右侧的空隙-->
        <item name="centerRowSpace">1dip</item><!--中间箭头和文字的距离-->
    </style>

