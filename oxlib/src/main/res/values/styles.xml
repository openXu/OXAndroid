    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/color_blue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/main_style</item>
        <item name="android:windowAnimationStyle">@style/base_activity_animation</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme">
        <!--不能在此配置fitsSystemWindows，会导致toast或者系统弹窗上移挪位-->
        <!--   <item name="android:fitsSystemWindows">true</item>-->
    </style>

    <!--activity滑动出入动画-->
    <style name="base_activity_animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_stay_orig</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_stay_orig</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_slide_right_in</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_stay_orig</item>
        <item name="android:taskCloseEnterAnimation">@anim/activity_stay_orig</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_slide_right_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/activity_slide_right_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/activity_stay_orig</item>
        <item name="android:taskToBackEnterAnimation">@anim/activity_stay_orig</item>
        <item name="android:taskToBackExitAnimation">@anim/activity_slide_right_out</item>
    </style>

</resources>
